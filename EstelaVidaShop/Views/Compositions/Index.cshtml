@model IEnumerable<EstelaVidaShop.Models.Composition>

@{
    ViewBag.Title = "Index";
}

<h2>Ингредиенты</h2>

<p>
    @Html.ActionLink("Создать новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Продукт")
        </th>

        <th>
            @Html.DisplayName("Сырьё")
        </th>

        <th>
            @Html.DisplayName("Количество")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product1.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Material1.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.ID }) |
            @Html.ActionLink("Просмотреть", "Details", new { id = item.ID }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
